{
  "manifest_version": 4,
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "name": "webCopilot",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "js": ["src/content/index.tsx"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "src/background"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["tabs", "activeTab", "storage", "sidePanel"]
}
